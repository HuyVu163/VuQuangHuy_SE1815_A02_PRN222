@page
@model IndexModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="container d-flex justify-content-center align-items-center vh-70">
    <div class="card shadow-lg p-4 text-center w-50">
        <h1 class="display-4 text-primary mb-4">Welcome</h1>

        @if (User.Identity.IsAuthenticated)
        {
            <p class="lead">You are logged in as <strong>@User.Identity.Name</strong></p>

            @if (User.IsInRole("0"))
            {
                <div class="d-grid gap-3">
                    <a class="btn btn-outline-primary" asp-page="./AccountManagement/Index">
                        <i class="bi bi-person"></i> Manage Account
                    </a>
                    <a class="btn btn-outline-success" asp-page="./News/Report">
                        <i class="bi bi-bar-chart"></i> Report Statistic
                    </a>
                </div>
            }
            else if (User.IsInRole("1"))
            {
                <div class="d-grid gap-3">
                    <a class="btn btn-outline-primary" asp-page="./CategoryManagement/Index">
                        <i class="bi bi-folder"></i> Manage Category
                    </a>
                    <a class="btn btn-outline-secondary" asp-page="./TagManagement/Index">
                        <i class="bi bi-tags"></i> Tag Management
                    </a>
                    <a class="btn btn-outline-info" asp-page="./News/History">
                        <i class="bi bi-clock-history"></i> History News
                    </a>
                    <a class="btn btn-outline-warning" asp-page="./News/Home">
                        <i class="bi bi-newspaper"></i> Manage News
                    </a>
                </div>
            }
            else if (User.IsInRole("2"))
            {
                Response.Redirect("/News/Index");
            }
        }
        else
        {
            Response.Redirect("/News/Index");
        }
    </div>
</div>
